<h1>Listing members</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Pass</th>
      <th>Name</th>
      <th>Mail</th>
      <th>Memo</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.userid %></td>
        <td><%= member.pass %></td>
        <td><%= member.name %></td>
        <td><%= member.mail %></td>
        <td><%= member.memo %></td>
        <td><%= member.admin %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
